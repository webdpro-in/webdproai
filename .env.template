# WebDPro Environment Configuration Template
# Copy this file to .env.local and fill in your actual values

# ============ AWS CONFIGURATION ============
AWS_ACCOUNT_ID="123456789012"

# ============ CROSS-REGION ARCHITECTURE ============
# Storage Layer - All data, websites, assets in Stockholm
AWS_S3_REGION="eu-north-1"
AWS_S3_BUCKET="webdpro-ai-storage"
AWS_S3_BUCKET_WEBSITES="webdpro-websites"
AWS_S3_BUCKET_ASSETS="webdpro-assets"

# AI Layer - All Bedrock models in N. Virginia  
AWS_BEDROCK_REGION="us-east-1"
AWS_BEDROCK_MODEL_PRIMARY="anthropic.claude-3-5-sonnet-20241022-v2:0"
AWS_BEDROCK_MODEL_FALLBACK_1="anthropic.claude-3-haiku-20240307-v1:0"
AWS_BEDROCK_MODEL_FALLBACK_2="amazon.titan-text-express-v1"
AWS_BEDROCK_MODEL_IMAGE="amazon.titan-image-generator-v1"
AWS_BEDROCK_MODEL_FALLBACK_3="meta.llama3-70b-instruct-v1:0"

# Business Logic Layer - Core services in Stockholm
AWS_CORE_REGION="eu-north-1"

# ============ COGNITO CONFIGURATION ============
COGNITO_USER_POOL_ID="eu-north-1_XXXXXXXXX"
COGNITO_CLIENT_ID="your_cognito_client_id"

# ============ DYNAMODB CONFIGURATION ============
DYNAMODB_TABLE_PREFIX="webdpro"
DYNAMODB_REGION="eu-north-1"

# ============ CLOUDFRONT CONFIGURATION ============
CLOUDFRONT_DISTRIBUTION_ID="E1234567890ABC"
CLOUDFRONT_REGION="us-east-1"

# ============ RAZORPAY CONFIGURATION ============
RAZORPAY_KEY_ID="rzp_test_your_key_here"
RAZORPAY_KEY_SECRET="your_razorpay_secret_here"

# ============ HOSTINGER CONFIGURATION ============
HOSTINGER_API_KEY="your_hostinger_api_key"

# ============ SERVICE URLS (Auto-populated after deployment) ============
BACKEND_SERVICE_URL="https://your-backend-service.execute-api.eu-north-1.amazonaws.com/dev"
AI_SERVICE_URL="https://your-ai-service.execute-api.eu-north-1.amazonaws.com/dev"
INVENTORY_SERVICE_URL="https://your-inventory-service.execute-api.eu-north-1.amazonaws.com/dev"
DELIVERY_SERVICE_URL="https://your-delivery-service.execute-api.eu-north-1.amazonaws.com/dev"

# ============ FRONTEND CONFIGURATION ============
NEXT_PUBLIC_API_URL="https://your-backend-service.execute-api.eu-north-1.amazonaws.com/dev"
NEXT_PUBLIC_RAZORPAY_KEY_ID="rzp_test_your_key_here"
NEXT_PUBLIC_APP_URL="https://your-domain.com"

# ============ DEVELOPMENT ONLY ============
DATABASE_URL="file:./dev.db"